<%= simple_form_for @pokemon do |f| %>
  <%= f.input :Name %>

  <%= f.input :Type_1 %>

  <%= f.input :Type_2 %>

  <%= f.input :Total %>

  <%= f.input :HP %>

  <%= f.input :Attack %>

  <%= f.input :Defence %>

  <%= f.input :Sp_Atk %>

  <%= f.input :Sp_Def %>

  <%= f.input :Speed %>

  <%= f.input :Generation %>

  <%= f.input :Legendary %>

  <%= f.submit %>
<% end %>

