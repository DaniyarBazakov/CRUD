<%= form_for @pokemon do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :Name %>

  <%= f.label :Type_1 %>
  <%= f.text_field :Type_1 %>

  <%= f.label :Type_2 %>
  <%= f.text_field :Type_2 %>

  <%= f.label :Total %>
  <%= f.number_field :Total %>

  <%= f.label :HP %>
  <%= f.number_field :HP %>

  <%= f.label :Attack %>
  <%= f.number_field :Attack %>

  <%= f.label :Defence %>
  <%= f.number_field :Defence %>

  <%= f.label :Sp_Atk %>
  <%= f.number_field :Sp_Atk %>

  <%= f.label :Sp_Def %>
  <%= f.number_field :Sp_Def %>

  <%= f.label :Speed %>
  <%= f.number_field :Speed %>

  <%= f.label :Generation %>
  <%= f.number_field :Generation %>

  <%= f.label :Legendary %>
  <%= f.text_field :Legendary %>

  <%= f.submit %>
<% end %>

