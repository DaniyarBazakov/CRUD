<h1>All pokemons</h1>
<%= link_to 'Create a new pokemon', new_pokemon_path %>
<% @pokemons.each do |pokemon| %>
    <h5>
        <%= link_to pokemon.Name, pokemon_path(pokemon) %>
        <%= pokemon.Type_1 %>
        <%= pokemon.Type_2 %>
        <%= pokemon.Total %>
        <%= pokemon.HP %>
        <%= pokemon.Attack %>
        <%= pokemon.Defense %>
        <%= pokemon.Sp_Atk %>
        <%= pokemon.Sp_Def %>
        <%= pokemon.Speed %>
        <%= pokemon.Generation %>
        <%= pokemon.Legendary %>
    </h5>
<% end %>
